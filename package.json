{
  "name": "project-conductor",
  "version": "1.0.0",
  "description": "A workflow orchestration and automation system designed to manage and coordinate complex multi-step processes",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:presence": "jest tests/integration/presence.test.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "demo:presence": "node examples/presence-demo.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "start": "node dist/index.js",
    "validate": "bash scripts/validate.sh",
    "gen-prp": "node scripts/gen-prp.mjs",
    "typecheck": "tsc --noEmit",
    "precommit": "npm run lint && npm run typecheck && npm test",
    "note": "node scripts/note-cli.mjs",
    "note:add": "node scripts/note-cli.mjs add",
    "note:promote": "node scripts/note-cli.mjs promote",
    "note:list": "node scripts/note-cli.mjs list",
    "note:search": "node scripts/note-cli.mjs search",
    "scout": "node scripts/scout-cli.mjs",
    "scout:prp": "node scripts/scout-cli.mjs --from docs/prps",
    "scout:initial": "node scripts/scout-cli.mjs --from INITIAL.md",
    "workflow": "bash scripts/workflow.sh"
  },
  "keywords": [
    "workflow",
    "orchestration",
    "automation",
    "task-management",
    "process-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.9",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
